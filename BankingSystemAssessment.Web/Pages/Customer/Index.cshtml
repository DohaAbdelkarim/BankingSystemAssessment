@page
@model IndexModel
@{
}
<p>
    <a asp-page="/Account/CreateAccount">Create New Account</a>
</p>

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers.Data)
        {
            <tr>
                <td>@item.CustomerName </td>
                <td>@item.CustomerID </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>