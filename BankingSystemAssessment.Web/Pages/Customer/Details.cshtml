@page
@model BankingSystemAssessment.Web.Pages.DetailsModel
@{
}
<div>
    <h4>CustomerDetailsModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.LastName
        </dd>
    </dl>

    @foreach (var item in Model.Customer.Accounts)
    {
        <dl class="row">
            <dt class="col-sm-2">
                <label>AccountNumber</label>
            </dt>
            <dd class="col-sm-10">
                @item.AccountNumber
            </dd>
            <dt class="col-sm-2">
                <label>Balance</label>
            </dt>
            <dd class="col-sm-10">
                @item.Balance @item.Currency
            </dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>Transaction Date</th>
                        <th>Reference Number</th>
                        <th>Description</th>
                        <th>Transcation Type</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>BalanceAfter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in item.Transactions)
                    {
                        <tr>
                            <td>@transaction.TransactionDate </td>
                            <td>@transaction.ReferenceNumber </td>
                            <td>@transaction.Description </td>
                            <td>@transaction.TranscationType </td>
                            <td>@transaction.Debit </td>
                            <td>@transaction.Credit </td>
                            <td>@transaction.BalanceAfter </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dl>
    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
